
<div class="row">
  	<div class="col-sm-8">
  		<h2>Comments</h2>
  		<% @article.comments.each do |comment| %>
  		<div class="media">
		  <div class="media-left">
		    <a href="#">
		      <img class="media-object" src="https://placeimg.com/64/64/any">
		    </a>
		  </div>
		  <div class="media-body">
		    <h4 class="media-heading"><%= comment.commenter %></h4>
		    <p><%= comment.body %></p>
		  </div>
		</div>
		<% end %>
  	</div>
</div>