<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-block">
        <%= link_to article_path(article) do %>
        <h4 class="card-title"><%= article.title %></h4>
        <% end %>
        <p><%= article.views %> view(s)</p>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
      </div>
      <div class="card-footer">
        <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
        <%= link_to 'Delete', article_path(article), data: { confirm: 'Are you sure?' }, method: :delete,
            class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>